@model LoginViewModel

<form class='p-2' method='post' asp-action="Login" asp-controller="Identity">
    @Html.AntiForgeryToken()
    <div class='m-2'>
        <label asp-for="UserName" class='form-label'>Email</label>
        <input asp-for="UserName" class='form-control'/>
    </div>
    <div class='m-2'>
        <label asp-for="Password" class='form-label'>Password</label>
        <input asp-for="Password" class='form-control'/>
    </div>
    <div class='m-2'>
        
        <input asp-for="RememberMe" class='form-check-input'/><label asp-for="RememberMe" class='form-check-label'>Remember Me</label>
    </div>
    <div class='m-2'>
        
        <input type='submit' class='btn btn-primary'/>

    </div>
</form>

<partial name='_ValidationScriptsPartial'></partial>